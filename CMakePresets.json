{
    "version": 8,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": true,
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "SJ_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/bin/${presetName}/lib",
                "SJ_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/bin/${presetName}/lib",
                "SJ_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/bin/${presetName}/",
                "SJ_CODEGEN_OUTPUT_DIRECTORY": "${sourceDir}/bin/${presetName}/GeneratedCode"
            }
        },
        {
            "inherits": "base",
            "name": "ClangAsan",
            "displayName": "ASAN - Clang",
            "description": "Using compilers: C = /usr/bin/clang, CXX = /usr/bin/clang++",
            "generator": "Ninja",
            "toolchainFile": "${fileDir}/CMake/clang_toolchain_asan.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "inherits": "base",
            "name": "ClangDebug",
            "displayName": "Debug - Clang",
            "description": "Using compilers: C = /usr/bin/clang, CXX = /usr/bin/clang++",
            "generator": "Ninja",
            "toolchainFile": "${fileDir}/CMake/clang_toolchain.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "inherits": "base",
            "name": "ClangRelease",
            "displayName": "Release - Clang",
            "description": "Using compilers: C = /usr/bin/clang, CXX = /usr/bin/clang++",
            "generator": "Ninja",
            "toolchainFile": "${fileDir}/CMake/clang_toolchain.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "inherits": "base",
            "name": "GccDebug",
            "displayName": "Debug - GCC",
            "description": "Using compilers: C = /usr/bin/gcc, CXX = /usr/bin/g++",
            "generator": "Ninja",
            "toolchainFile": "${fileDir}/CMake/gcc_toolchain.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "inherits": "base",
            "name": "GccRelease",
            "displayName": "Release - GCC",
            "description": "Using compilers: C = /usr/bin/gcc, CXX = /usr/bin/g++",
            "generator": "Ninja",
            "toolchainFile": "${fileDir}/CMake/gcc_toolchain.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "msvc-debug",
            "inherits": "base",
            "displayName": "Debug (MSVC)",
            "toolchainFile": "${fileDir}/CMake/msvc_toolchain.cmake",
            "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Debug"
            },
            "condition": {
            "type": "equals",
            "lhs": "${hostSystemName}",
            "rhs": "Windows"
            }
        }
    ],
    "buildPresets": [
        {
            "name":"Debug",
            "configurePreset": "ClangDebug",
            "displayName": "Debug"
        },
        {
            "name":"ASAN",
            "configurePreset": "ClangAsan",
            "displayName": "Asan"
        },
        {
            "name":"Release",
            "configurePreset": "ClangRelease",
            "displayName": "Release"
        },
        {
            "name": "Gold",
            "description": "Build All Targets with SJ_GOLD defined",
            "hidden": true,
            "environment": {
                "SJ_GOLD": null
            }
        },
        {
            "name":"ClangDebugGold",
            "configurePreset": "ClangDebug",
            "displayName": "Debug - GOLD"
        },
        {
            "name":"ClangReleaseGold",
            "configurePreset": "ClangRelease",
            "displayName": "Release - GOLD"
        },
        {
            "name":"GccDebug",
            "configurePreset": "GccDebug",
            "displayName": "Debug"
        },
        {
            "name":"GccRelease",
            "configurePreset": "GccRelease",
            "displayName": "Release"
        },
        {
            "name":"MSVCDebug",
            "configurePreset": "msvc-debug",
            "displayName": "MSVC-Debug"
        }
    ]
}